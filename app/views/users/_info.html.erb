<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
	</tr>
	<tr>
	  <th>follows</th>
	  <th><%= link_to user.follower.count, user_follow_path(user.id) %></th>
	</tr>
	<tr>
	  <th>followers</th>
	  <th><%= link_to user.followed.count, user_followers_path(user.id) %></th>
  </tr>
  <th>
  <% if current_user.id != user.id %>
    <% if current_user.following?(user) %>
       <%= link_to 'フォローを外す', relationship_path(user.id), class: "btn btn-info", method: :delete %>
      <% else %>
        <%= link_to 'フォローをする', relationships_path(id: user.id), class: "btn btn-info", method: :post %>
      <% end %>
 <% end %>
  </th>
</table>

<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>